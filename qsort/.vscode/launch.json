    "version": "0.2.0",
    "configurations": [{
        "type": "cppdbg",
        "request": "launch",
        "name": "GDB sequential",
        "cwd": "${fileDirname}",
        "program": "${workspaceRoot}/build/sequential_sort_tests",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Включить автоматическое форматирование для gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            },
            {
                "description": "Задать для варианта приложения дизассемблирования значение Intel",
                "text": "-gdb-set disassembly-flavor intel",
                "ignoreFailures": true
            }
        ]
    },
    {
        "type": "cppdbg",
        "request": "launch",
        "name": "GDB parallel",
        "cwd": "${fileDirname}",
        "program": "${workspaceRoot}/build/parallel_sort_tests",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Включить автоматическое форматирование для gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            },
            {
                "description": "Задать для варианта приложения дизассемблирования значение Intel",
                "text": "-gdb-set disassembly-flavor intel",
                "ignoreFailures": true
            }
        ]
    }]
}